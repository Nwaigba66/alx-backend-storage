// Ensure dbName is provided as an option
if (!dbName) {
  print("Error: Database name not provided. Usage: mongo scriptName.js --eval \"var dbName='your_database_name'\"");
  quit();
}

// Connect to the specified database
const db = new Mongo().getDB(dbName);

// Get the count of documents in the 'school' collection
const count = db.school.count();

// Display the number of documents
print(`Number of documents in 'school' collection: ${count}`);
